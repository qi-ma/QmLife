<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:background="@color/tab_gb"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_weight="3"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_technology_title"
                android:textSize="20sp"
                android:text="懂你，是最深的情"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginTop="5dp"
                android:textColor="@color/tab_normal_color"
                android:id="@+id/tv_technology_abbr"
                android:textSize="10sp"
                android:text="一杯茶，在等一个懂它的人。 有的时候 人也是在等一杯倾心的茶 你若愿等 茶不负你 一朵花 是在等懂得欣赏ta的知己..."
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@drawable/comment"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
                <TextView
                    android:gravity="center"
                    android:textColor="@color/tab_normal_color"
                    android:id="@+id/tv_technology_comment"
                    android:textSize="10sp"
                    android:text="151"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:src="@drawable/like"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
                <TextView
                    android:gravity="center"
                    android:textColor="@color/tab_normal_color"
                    android:id="@+id/tv_technology_like"
                    android:textSize="10sp"
                    android:text="151"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>


        </LinearLayout>
        <ImageView

            android:id="@+id/iv_technology_image"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:src="@drawable/navigation_header_img"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
    </LinearLayout>

</LinearLayout>