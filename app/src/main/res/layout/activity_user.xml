<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="com.qm.qmlife.business.user.UserActivity">
    <include layout="@layout/title_include"/>
    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/ll_user_info"
                android:layout_marginTop="15dp"
                android:background="@color/tab_gb"
                android:layout_width="match_parent"
                android:layout_height="150dp">
                <View
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>

                <com.qm.qmlife.custom.CircleImageView
                    android:id="@+id/civ_user_img"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_gravity="center_vertical"

                    android:scaleType="centerCrop"
                    android:src="@drawable/navigation_header_img"
                    />
                <View
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/tv_user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textSize="20sp"
                    />
                <View
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_user_update"
                android:layout_marginTop="35dp"
                android:background="@color/tab_gb"
                android:layout_width="match_parent"
                android:layout_height="40dp">

                <View
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>
                <ImageView
                    android:src="@drawable/user_update"
                    android:layout_width="28dp"
                    android:layout_height="match_parent" />
                <TextView
                    android:textSize="17sp"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:text="修改信息"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
                <View
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_user_note"
                android:layout_marginTop="5dp"
                android:background="@color/tab_gb"
                android:layout_width="match_parent"
                android:layout_height="40dp">

                <View
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>
                <ImageView
                    android:src="@drawable/user_notbook"
                    android:layout_width="28dp"
                    android:layout_height="match_parent" />
                <TextView
                    android:textSize="17sp"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:text="我的备忘"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
                <View
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_user_feedback"
                android:layout_marginTop="5dp"
                android:background="@color/tab_gb"
                android:layout_width="match_parent"
                android:layout_height="40dp">

                <View
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>
                <ImageView
                    android:src="@drawable/user_feedback"
                    android:layout_width="28dp"
                    android:layout_height="match_parent" />
                <TextView
                    android:textSize="17sp"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:text="我想反馈"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
                <View
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
